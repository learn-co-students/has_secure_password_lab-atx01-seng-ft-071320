<h1>Create an Account</h1>

<%= form_for(@user) do |f| %>

<%= f.label :username %><br>
<%= f.text_field :name %><br>

<%= f.label :password %><br>
<%= f.text_field :password %><br>

<%= f.label :confirm_password %><br>
<%= f.text_field :password_confirmation %><br><br>

<%= f.submit 'Sign Up' %>

<% end %>